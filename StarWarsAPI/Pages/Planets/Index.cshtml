@page
@model StarWarsAPI.Pages.Planets.IndexModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Планеты из Star Wars</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center">Данные о планете</h1>
        <div class="card mt-4">
            <div class="card-body">
                @if (Model.Planet != null)
                {
                    <h2>@Model.Planet.Name</h2>
                    <p><strong>Гравитация:</strong> @Model.Planet.Gravity</p> 
                    <p><strong>Жители:</strong></p>
                    <ul>
                        @foreach (var resident in Model.Planet.Residents)
                        {
                            <li>@resident.Name</li>
                        }
                    </ul>
                }
                else
                {
                    <p>Данные загружаются...</p>
                }
            </div>
        </div>

        <!-- Кнопки переключения -->
        <div class="d-flex justify-content-between mt-4">
            @if (Model.Planet.Id > 1)
            {
                <!-- Кнопка "Назад" -->
                <button class="btn btn-secondary" onclick="location.href='?planetIndex=@(Model.Planet.Id - 1)'">
                    Предыдущая планета
                </button>
            }

            <!-- Кнопка "Вперёд" -->
            <button class="btn btn-primary ms-auto" onclick="location.href='?planetIndex=@(Model.Planet.Id + 1)'">
                Следующая планета
            </button>
        </div>
    </div>
</body>
</html>
